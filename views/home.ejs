
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

<div class="container" >

<h1 style="text-align:center"> Questions </h1>
<div class="form-group">
			<a href="/show" class="btn btn-success btn-lg ">Question bank</a>
			<a href="/new" class="btn btn-success btn-lg ">Add new question</a>
		</div>


		<form class="col-lg-8" action="" method="POST">
		<% var question=[]; for(let i=0;i<questions.length;i++){%>
		<%question.push(questions[i].id)%>
		
		<div class="form-group">
		<h2>Question</h2>
		
		<div>
			
			<textarea class="form-control" type="text" name="quiz[text]" rows="5"  readonly > <%=questions[i].text%>
			</textarea>
			<br>
		</div>

		<div class="form-group">
			<h2>Answers</h2>
			
			
			<input id="<%=questions[i].answers[0]%>" class="form-check-input" type="radio" name="<%=i%>" >
			<label for="<%=questions[i].answers[0]%>"><%=questions[i].answers[0]%></label>
		<br>
		</div>
			
<div class="form-group">
		<input id="<%=questions[i].answers[1]%>" class="form-check-input" type="radio" name="<%=i%>" >
		<label for="<%=questions[i].answers[1]%>"><%=questions[i].answers[1]%></label><br>
		</div>
		

<div class="form-group">
		<input id="<%=questions[i].answers[2]%>" class="form-check-input" type="radio" name="<%=i%>" >
		<label for="<%=questions[i].answers[2]%>"><%=questions[i].answers[2]%></label><br>
		</div>
		
<div class="form-group">
		<input id="<%=questions[i].answers[3]%>" class="form-check-input" type="radio" name="<%=i%>" >
		<label for="<%=questions[i].answers[3]%>"><%=questions[i].answers[3]%></label><br>
		</div>
		

		</div>
	



<%}%>


<%if(questions.length){%>
		<div class="form-group">
			<button type="button" class="btn btn-success btn-lg ">Results</button>
		</div>
		<%}%>
</form>
</div>
<script>
var questions =[]
var correct=[]
var button=document.querySelector("button");
var radio=document.querySelectorAll("input[type='radio']");
var question=<%-JSON.stringify(question)%>

for(var i=0;i<radio.length/4;i++){

questions.push(question[i])}
var correctAns=0;



var correct=[]
var button=document.querySelector("button");
var radio=document.querySelectorAll("input[type='radio']");
button.onclick=()=>{console.log(questions); var data = JSON.stringify(questions);

var xhr = new XMLHttpRequest();
xhr.withCredentials = true;

xhr.addEventListener("readystatechange", function () {
  if (this.readyState === 4) {
    correct=JSON.parse(this.responseText);
	console.log(correct)
  for(var i=0; i<radio.length;i++){
if(radio[i].checked){if(radio[i].id!=correct[parseInt(radio[i].name)]){

radio[i].nextElementSibling.innerHTML=radio[i].nextElementSibling.innerHTML.fontcolor("red")

}else{correctAns++}

}
if(radio[i].id==correct[parseInt(radio[i].name)]){

radio[i].nextElementSibling.innerHTML=radio[i].nextElementSibling.innerHTML.fontcolor("green")

}


}
alert(`Az eredmenyed: ${((correctAns/(radio.length/4))*100).toFixed(2)}%`)}
});

xhr.open("POST", "http://127.0.0.1:5500/answers");
xhr.setRequestHeader("content-type", "application/x-www-form-urlencoded");
xhr.setRequestHeader("cache-control", "no-cache");


xhr.send(data);


}

</script>